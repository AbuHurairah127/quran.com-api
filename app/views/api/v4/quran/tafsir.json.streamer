json.object! do
  json.tafsirs do
    json.array! @tafsirs do |tafsir|
      json.object! do
        json.extract! tafsir,
                      :resource_id,
                      *@fields,
                      :text

      end
    end
  end

  json.meta do
    json.object! do
      json.tafsir_name @resource.name
      json.author_name @resource.author_name
    end
  end
end
